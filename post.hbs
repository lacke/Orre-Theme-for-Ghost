{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div id="site-head-content" class="inner">
    {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
    <h1 class="blog-title"><a href="/">{{@blog.title}}</a></h1>
    <h2 class="blog-description">{{@blog.description}}</h2>
    {{> social-links}}
  </div>
</header>

<main class="content" role="main">
  <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}
      {{! Everything below outputs content of the the post which has been published }}
      <h1 class="post-title">{{{title}}}</h1>
      {{#if image}}
      <figure class="cover-image">
          <img src="{{image}}" />
      </figure>
      {{/if}}
      <span class="post-meta"><i class="fa fa-calendar"></i> <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
      {{#if tags}}
        <span class="post-tags">
          <i class="fa fa-tags"></i>
			    {{#tags}}
				  {{name}}
          {{/tags}}
        </span>
      {{/if}}
      <section class="post-content">
        {{content}}
      </section>
      {{#if author}}
        {{#author}}
          <section class="author">
            <h5>by <a href="{{url}}">{{name}}</a></h5>
            <p>{{author.bio}}</p>
          </section>
        {{/author}}
      {{/if}}
      <section class="post-navigation">
        {{#prev_post}}
        <div class="previous-post">
          &laquo; <a href="{{url}}">{{title}}</a>
        </div>
        {{/prev_post}}
        {{#next_post}}
        <div class="next-post">
          <a href="{{url}}">{{title}}</a> &raquo;
        </div>
        {{/next_post}}
      </section>
      <footer class="post-footer">
        <section class="share">
          <h4>Share this post</h4>
          <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <i class="fa fa-twitter"></i>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <i class="fa fa-facebook"></i>
          </a>
          <a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <i class="fa fa-google-plus"></i>
          </a>
        </section>
        <section class="save-for-later">
          <h4>Or read it later, using</h4>
          <a href="http://www.instapaper.com/hello2?url={{url absolute="true"}}&title={{{title}}}">Instapaper</a>
        </section>
        <section class="go-back">
          <h4>Or just</h4>
          <a href="/">go back to the index page</a>
        </section>
      </footer>
    {{/post}}
  </article>
</main>
